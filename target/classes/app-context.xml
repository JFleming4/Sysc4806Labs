<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="mainFrame" class="AddressBook.MainFrame" init-method="init">
        <property name="contentPane">
            <ref bean="mainPanel"></ref>
        </property>
        <property name="title">
            <value>AddressBook</value>
        </property>
    </bean>
    <bean id="mainPanel" class="AddressBook.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <value>1</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="itemScrollPane"/>
                <ref bean="buttonPanel"/>
            </list>
        </property>
    </bean>
    <bean id="itemScrollPane" class="javax.swing.JScrollPane">
        <constructor-arg>
            <ref bean="itemTable"/>
        </constructor-arg>
    </bean>
    <bean id="itemTable" class="javax.swing.JTable">
        <property name="model">
            <ref bean="itemTableModel"></ref>
        </property>
    </bean>
    <bean id="itemTableModel" class="AddressBook.ItemTableModel">
        <property name="itemList">
            <ref bean="itemList"/>
        </property>
    </bean>
    <bean id="itemList" class="AddressBook.AddressBook">
    </bean>
    <bean id="buttonPanel" class="AddressBook.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <value>0</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="deleteButton"/>
                <ref bean="addNewButton"/>
            </list>
        </property>
    </bean>
    <bean id="deleteButton" class="AddressBook.ActionListenerButton"
          init-method="init">
        <property name="actionListener">
            <ref bean="deleteButtonActionListener"/>
        </property>
        <property name="text">
            <value>Delete</value>
        </property>
    </bean>
    <bean id="deleteButtonActionListener"
          class="AddressBook.DeleteButtonActionListener">
        <property name="list">
            <ref bean="itemList"/>
        </property>
        <property name="table">
            <ref bean="itemTable"/>
        </property>
    </bean>
    <bean id="addNewButton" class="AddressBook.ActionListenerButton"
          init-method="init">
        <property name="actionListener">
            <ref bean="addNewButtonActionListener"/>
        </property>
        <property name="text">
            <value>Add New</value>
        </property>
    </bean>
    <bean id="addNewButtonActionListener"
          class="AddressBook.AddNewButtonActionListener">
        <property name="list">
            <ref bean="itemList"/>
        </property>
        <property name="table">
            <ref bean="itemTable"/>
        </property>
    </bean>
</beans>